<%= error_messages_for @ivar %>
<% form_for @ivar, :action => url(MA[:routes][:user][:index]) do %>
<p><%= text_control :email, :label => "Email address:" %></p>
<p><%= text_control :login, :label => "Username:" %></p>
<p><%= password_control :password, :label => "Password:" %></p>
<p><%= password_control :password_confirmation, :label => "Password (confirm):" %></p>
<p><%= submit_button "Sign up" %></p>
<% end %>