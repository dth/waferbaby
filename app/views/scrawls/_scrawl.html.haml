.scrawl{:id => "from-#{@scrawl.person.username}-at-#{@scrawl.created_time}"}
  %h3
    %a.date{:href => date_url_for(@scrawl, 'wallscrawl') + "#from-#{@scrawl.person.username}-at-#{@scrawl.created_time}", :title => "Permalink for this scrawl."}
      %span.month= @scrawl.created_month_short_name
      %span.day= @scrawl.created_day  
    = link_to("#{@scrawl.person.username}", url(:person, @scrawl.person), :title => "View more about '#{h(@scrawl.person.username)}'.")
  .contents
    = markup(@scrawl.contents)