- unless @posts.length < 1
  - throw_content :feed, "/posts"
  %h2
    Ramblings
    = "from #{date_title}" if params["created_year"]
  - @posts.each do |@post|
    = partial :post
  = paginate(params[:page] ? params[:page].to_i : 1, @count, :default_css => false) if @count > 1
- else
  %h2 Aw, I'm sorry!
  %p There are no posts here.