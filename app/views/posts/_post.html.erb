<div class="post<% if @post.contents.length <= 140 %> small<% end %>" id="post_<%= @post.id %>">
<p class="date">
<span class="month"><%= @post.created_month_short_name %></span>
<span class="day"><%= @post.created_day %></span>
<span class="year"><%= @post.created_year %></span>
</p>
<div class="contents">
<h3><%= @post.is_selected ? @post.title : link_to_post(@post) %></h3>
<%= markup(@post.contents) %>
</div>
<% if @post.categories.length > 0 %><p class="categories"><%= link_to_post_categories(@post) %></p><% end %>
</div>