<div class="post" id="post_<%= @post.id %>">
<h2><%= @post.is_selected ? @post.title : link_to_post(@post) %></h2>
<%= BlueCloth::new(@post.contents).to_html %>
<p class="summary">This was written <%= time_lost_in_words(@post.created_on) %> ago (<%= link_to_post_year(@post) %>/<%= link_to_post_month(@post) %>/<%= link_to_post_day(@post) %>).</p>
</div>